    "references": [
      "https://attack.mitre.org/techniques/T1059/",
      "https://attack.mitre.org/techniques/T1071/",
      "https://www.revshells.com/"
    ]
  },
  "capabilities": {
    "supports_inline": false,
    "requires_alert": true,
    "requires_block": true,
    "max_span_ms": 10000,
    "mitre_attack": ["T1059", "T1071", "T1505"]
  }
}
